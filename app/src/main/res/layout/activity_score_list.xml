<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ScoreListActivity">

    <TextView
        android:id="@+id/nametextViewScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Name: "
        android:textColor="@android:color/holo_red_dark"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/scoretextView"
        android:layout_width="119dp"
        android:layout_height="28dp"
        android:layout_marginStart="92dp"
        android:text="TextView"
        app:layout_constraintStart_toEndOf="@+id/nametextViewScore"
        app:layout_constraintTop_toTopOf="@+id/nametextViewScore" />

    <Button
        android:id="@+id/btnSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:onClick="save"
        android:text="Save"
        app:layout_constraintStart_toStartOf="@+id/nametextViewScore"
        app:layout_constraintTop_toBottomOf="@+id/nametextViewScore" />
</android.support.constraint.ConstraintLayout>